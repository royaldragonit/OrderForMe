@model OrderForMeProject.Models.Entities.SiteBuy

@{
    ViewData["Title"] = "Edit";
}



<h4>Site mua</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SiteBuyId" />
            <div class="form-group">
                <label class="control-label">Site mua</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tỷ giá</label>
                <input asp-for="RateUsdtoVnd" class="form-control" />
                <span asp-validation-for="RateUsdtoVnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Quay lại danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
